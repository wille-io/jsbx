{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "bash",
  "args": ["-c"],
  "type": "shell",
  "options":
  {
    "cwd": "${workspaceRoot}/build"
  },
  "tasks":
  [
    {
      "label": "make",
      "args": [
        "make hello"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}